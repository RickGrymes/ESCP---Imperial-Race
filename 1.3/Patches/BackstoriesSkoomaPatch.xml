<?xml version="1.0" encoding="utf-8"?>
<Patch>

<Operation Class="PatchOperationFindMod">
        <mods>
            <li>MorrowRim - Moon Sugar and Skooma</li>
        </mods> 
                
        <match Class="PatchOperationSequence">
            <operations>
            
                <li Class="PatchOperationAdd"> 
                    <xpath>/Defs/AlienRace.BackstoryDef[defName="ESCP_Imperial_FormerBladesOperativeBackstory"]/forcedItems</xpath>
                    <value>
                        <Skooma>2~10</Skooma>
                    </value>
                </li>
                
                <li Class="PatchOperationAdd"> 
                    <xpath>/Defs/AlienRace.BackstoryDef[defName="ESCP_Imperial_FormerBladesOperativeBackstory"]</xpath>
                    <value>
                        <forcedHediffs>
                          <li>SkoomaAddiction</li>
                        </forcedHediffs>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>