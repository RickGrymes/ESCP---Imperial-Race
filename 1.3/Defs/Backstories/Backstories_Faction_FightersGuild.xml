<Defs>

	<!--__________ Fighters Guild __________-->

	<!-- Associate -->

	<AlienRace.BackstoryDef>
		<defName>ESCP_Imperial_FightersGuildAssociateBackstory</defName>
		<title>Fighters Guild associate</title>
		<titleShort>guild associate</titleShort>
		<baseDescription>As a low ranking member of the Fighters Guild, [PAWN_nameDef] was usually given the least desirable assignments, the ones that paid the least, and the ones that promised no fame. This usually meant cleaning the sities sewers of goblins or rats. Though [PAWN_nameDef] persevered, for eventually [PAWN_pronoun] would recieve a promotion.</baseDescription>
		<slot>Adulthood</slot>
		<bodyTypeMale>Male</bodyTypeMale>
		<bodyTypeFemale>Female</bodyTypeFemale>
		<spawnCategories>
		  <li>ESCP_ImperialBackstory</li>
		  <li>ESCP_ImperialFightersGuildBackstory</li>
		</spawnCategories>
		<skillGains>
			<li>
				<defName>Melee</defName>
				<amount>3</amount>
			</li>
			<li>
				<defName>Crafting</defName>
				<amount>1</amount>
			</li>
		</skillGains>
		<forcedTraits>
			<li>
			    <defName>ESCP_Imperial_Nibenese</defName>
				<chance>25</chance>
			</li>
			<li>
			    <defName>ESCP_Imperial_Heartlander</defName>
				<chance>25</chance>
			</li>
			<li>
			    <defName>ESCP_Imperial_Colovian</defName>
				<chance>100</chance>
			</li>
		</forcedTraits>
		<disallowedTraits>
		</disallowedTraits>
		<workDisables>
		</workDisables>
		<maleCommonality>50</maleCommonality>
		<femaleCommonality>50</femaleCommonality>
	</AlienRace.BackstoryDef>
	
