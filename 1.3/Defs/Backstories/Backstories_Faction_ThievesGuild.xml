	<!-- Thief -->

	<AlienRace.BackstoryDef>
		<defName>ESCP_Imperial_ThievesGuildThiefBackstory</defName>
		<title>Thieves Guild thief</title>
		<titleShort>guild thief</titleShort>
		<baseDescription>As a low ranking member of the Thieves Guild, [PAWN_nameDef] typically took the jobs that paid the least, and had the most to loose from. This usually meant trying to steal small trinkits and low quality jewls from locals.</baseDescription>
		<slot>Adulthood</slot>
		<bodyTypeMale>Male</bodyTypeMale>
		<bodyTypeFemale>Female</bodyTypeFemale>
		<spawnCategories>
		  <li>ESCP_ImperialBackstory</li>
		  <li>ESCP_ImperialThievesGuildBackstory</li>
		</spawnCategories>
		<skillGains>
