	<!-- Glass -->
	
	<AlienRace.BackstoryDef>
		<defName>ESCP_Imperial_StuffKnowledge_GlassBackstory</defName>
		<title>master glass smith</title>
		<titleShort>master smith</titleShort>
		<baseDescription>[PAWN_nameDef] has mastered the art of working glass over many years of being taught as a student from Dunmer smiths.\n\n While not as great a craftsman as their Dunmer counter part [PAWN_nameDef] can still make amazing works of glass.</baseDescription>
		<slot>Adulthood</slot>
		<bodyTypeGlobal>Hulk</bodyTypeGlobal>
		<spawnCategories>
		  <li>ESCP_ImperialBackstory</li>
		</spawnCategories>
		<skillGains>
			<li>
				<defName>Crafting</defName>
				<amount>7</amount>
			</li>
			<li>
				<defName>Artistic</defName>
				<amount>3</amount>
			</li>
		</skillGains>
		<disallowedTraits>
		</disallowedTraits>
		<workDisables>
			<li>Animals</li>
			<li>PlantWork</li>
		</workDisables>
		<forcedItems>
		</forcedItems>
		<forcedTraits>
			<li>
			    <defName>ESCP_Imperial_Colovian</defName>
				<chance>50</chance>
			</li>
			<li>
			    <defName>ESCP_Imperial_Heartlander</defName>
				<chance>30</chance>
			</li>
			<li>
			    <defName>ESCP_Imperial_Nibenese</defName>
				<chance>100</chance>
			</li>
		</forcedTraits>
		<maleCommonality>4</maleCommonality>
		<femaleCommonality>4</femaleCommonality>
	</AlienRace.BackstoryDef>
	
