<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="SculptureBase" Name="ESCP_ImperialSculptureBase" Abstract="True">
  
    <comps Inherit="False">
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtSculpture</nameMaker>
        <descriptionMaker>ArtDescription_Sculpture</descriptionMaker>
        <canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
      </li>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>ESCP_ImperialWill</li>
        </focusTypes>
        <offsets>
          <li Class="FocusStrengthOffset_Quality">
            <curve>
              <points>
                <li>(0,0.12)</li> <!-- awful -->
                <li>(1,0.16)</li> <!-- poor -->
                <li>(2,0.20)</li> <!-- normal -->
                <li>(3,0.22)</li> <!-- good -->
                <li>(4,0.24)</li> <!-- excellent -->
                <li>(5,0.26)</li> <!-- masterwork -->
                <li>(6,0.28)</li> <!-- legendary -->
              </points>
            </curve>
          </li>
          <li Class="FocusStrengthOffset_BuildingDefsWithQuality">
            <defs>
              <li>ESCP_ImperialWillSculptureSmall</li>
              <li>ESCP_ImperialWillSculptureLarge</li>
            </defs>
            <radius>9.9</radius>
            <maxBuildings>8</maxBuildings>
            <focusPerQuality>
              <points>
                <li>(0,0.0)</li> <!-- awful -->
                <li>(1,0.0)</li> <!-- poor -->
                <li>(2,0.01)</li> <!-- normal -->
                <li>(3,0.01)</li> <!-- good -->
                <li>(4,0.01)</li> <!-- excellent -->
                <li>(5,0.02)</li> <!-- masterwork -->
                <li>(6,0.02)</li> <!-- legendary -->
              </points>
            </focusPerQuality>
            <explanationKey>MeditationFocusPerSculpture</explanationKey>
            <explanationKeyAbstract>MeditationFocusPerSculptureAbstract</explanationKeyAbstract>
          </li>
        </offsets>
      </li>
      <li Class="CompProperties_Styleable"></li>
    </comps>
  </ThingDef>

  
  
  <!--================================ Sculptures ======================================-->

  <!-- Colovian -->

  <ThingDef ParentName="ESCP_ImperialSculptureBase">
    <defName>ESCP_ColovianStatueSculptureSmall</defName>
    <label>colovian statue</label>
    <description>A shoulder and head sized bust sculpted into a colovian.</description>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Art/SculptureSmall</texPath>
    </graphicData>
    <fillPercent>0.35</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Mass>3</Mass>
      <Beauty>50</Beauty>
      <WorkToMake>18000</WorkToMake>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">10</StyleDominance>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
	  <dominantStyleCategory MayRequire="Ludeon.RimWorld.Ideology">ESCP_ColovianStyle</dominantStyleCategory>
  </ThingDef>

  <ThingDef ParentName="ESCP_ImperialSculptureBase">
    <defName>ESCP_ColovianSculptureLarge</defName>
    <label>colovian statue</label>
    <description>A pawn sized statue sculpted into a colovian in military armor.</description>
    <castEdgeShadows>true</castEdgeShadows>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Art/SculptureLarge</texPath>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <fillPercent>0.5</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>7</Mass>
      <Beauty>100</Beauty>
      <WorkToMake>30000</WorkToMake>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">20</StyleDominance>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
	  <dominantStyleCategory MayRequire="Ludeon.RimWorld.Ideology">ESCP_ColovianStyle</dominantStyleCategory>
  </ThingDef>

